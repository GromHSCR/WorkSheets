<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Worksheets.Pages.AuthPage">
  <StackLayout Padding="20" Spacing="10" VerticalOptions="Center" HorizontalOptions="Fill">
    <Image x:Name="LogoImage"></Image>
    <Entry Placeholder="Login"/>
    <Entry IsPassword="True" Placeholder="Password"/>
    <Button Clicked="Button_OnClicked" BackgroundColor="#e33123" Text="Login" BorderRadius="2"></Button>
  </StackLayout>
</ContentPage>